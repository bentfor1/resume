<div>
    {{#with main}}
    <main>

        {{#with summary}}
        <section>
            {{>title data="Summary" big=true}}
            {{text}}

        </section>
        {{/with}}
        {{#with experience}}

        <section>
            {{>title data="Other experience" big=false}}

            {{text}}
        </section>
        {{/with}}
    </main>
    {{/with}}
</div>

