<div class="container my-5">

    {{#with main}}
    <main class="row">
        <section class="col-6">

            {{>title data="Universities" big=true}}
            <ul>
                {{#each universities}}
                <li>{{name}}
                    {{#unless isEnd includeZero=true}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section class="col-6">

            {{>title data="My certificates" big=false}}

            <ul>
                {{#each certificates}}
                <li>{{ name}}, ({{id }}),
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}


</div>