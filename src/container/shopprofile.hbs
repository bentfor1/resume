<main>
    <br>
    <br>
    <h1>{{header}}</h1>
    {{!-- 2 buttons --}}
    <div class="row">
        <div class="col-12">
            <div class="nav nav-tabs">
                {{#with purchase.tabs}}
                <div class="nav-item">
                    <a href="#" class="nav-link active">{{0}}</a>
                </div>
                <div class="nav-item">
                    <a href="#" class="nav-link">{{1}}</a>
                </div>
                {{/with}}
            </div>
        </div>
    </div>
    {{!-- 4 buttons placeholder --}}
    <div class="row my-3 mx-2">
        {{#with purchase.actionBlock}}
        <div class="col-4">
            <button class="btn btn-outline-dark disabled">{{input.placeholder}}</button>
        </div>
        <div class="col-2">
            <a href="{{buttons.[0].link}}" class="btn btn-success">{{buttons.[0].text}}</a>
        </div>
        <div class="col-2">
            <a href="{{buttons.[1].link}}" class="btn btn-outline-success">{{buttons.[1].text}}</a>
        </div>
        <div class="col-2">
            <a href="{{buttons.[2].link}}" class="btn btn-outline-danger">{{buttons.[2].text}}</a>
        </div>
    </div>
    {{/with}}
    <hr>
    </div>
    {{!-- Набір пласких карток --}}
    {{#each purchase.itemList}}
    <div class="card my-5">
        <div class="row mt-3 ">
            <div class="col-4">
                <p>{{number}}
                <h5>{{status}}</h5>
                </p>
            </div>
            <div class="col-2">
                <p>{{amount.title}}
                <h5>{{amount.value}}</h5>
                </p>
            </div>
            <div class="col-4">
                <ul class="row g-8">
                    <div class="col-8">
                        <li class="list-group-item">{{this.price.title}}: {{this.price.value}}</li>
                    </div>
                    <div class="col-3">
                        <li class="list-group-item">{{this.amount}}</li>
                    </div>
                </ul>
            </div>

            <div class="col-2 my-3">
                <button type="button" class="btn btn-primary mb-2">{{this.buttons.[0].text}}</button>
                <button type="button" class="btn btn-danger">{{this.buttons.[1].text}}</button>
            </div>
            <div class="col-2 my-3">
                <button type="button" class="btn btn-primary mb-2">{{this.buttons.[0].text}}</button>
                <button type="button" class="btn btn-danger">{{this.buttons.[1].text}}</button>
            </div>

        </div>
    </div>
    {{/each}}


    {{!-- Footer --}}
    {{>shopfooter}}

</main>