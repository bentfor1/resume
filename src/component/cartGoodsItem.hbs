{{!-- Набір пласких карток --}}
{{#each goodsBlock}}
<div class="card my-5">
    <div class="row mt-3 ">



        <div class="col-2">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
        </div>
        <div class="col-4">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
        </div>
        <div class="col-4">
            <ul class="row g-8">
                <div class="col-8">
                    <li class="list-group-item">{{this.price.title}}: {{this.price.value}}</li>
                </div>
                <div class="col-3">
                    <li class="list-group-item">{{this.amount}}</li>
                </div>
            </ul>
        </div>

        <div class="col-2 my-3">
            <button type="button" class="btn btn-primary mb-2">{{this.buttons.[0].text}}</button>
            <button type="button" class="btn btn-danger">{{this.buttons.[1].text}}</button>
        </div>

    </div>
</div>
{{/each}}