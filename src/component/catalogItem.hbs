<div class="container col-8">
    <div class="row">
        {{#each goodsList}}
        <div class="card col-5 my-3 mx-2">
            <img src="{{img}}" class="card-img-top" alt="{{name}}">
            <div class="">
                {{#if isHot}}
                <span class="badge bg-danger">Гаряче</span>
                {{/if}}
                {{#if isNew}}
                <span class="badge bg-primary">Новинка</span>
                {{/if}}
                {{#if isFast}}
                <span class="badge bg-warning text-dark">Швидка доставка</span>
                {{/if}}
                {{#if isFree}}
                <span class="badge bg-success">Безкоштовна доставка</span>
                {{/if}}
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{review.amount}} {{review.text}}</p>
                <p class="card-text">{{price}}</p>
                <p class="card-text">{{delivery}}</p>
                <div class="">
                    {{#each buttons}}
                    <div class="my-2"><a href="{{link}}"
                            class="btn {{#if isPrimary}}btn-primary{{else if isSecondary}}btn-secondary{{else}}btn-outline-primary{{/if}}">
                            {{text}}
                        </a></div>
                    {{/each}}
                </div>
                <ul class="list-group list-group-flush">
                    {{#each characteristics}}
                    <li class="list-group-item">
                        <strong>{{title}}:</strong> {{value}}
                    </li>
                    {{/each}}
                </ul>

            </div>
        </div>
        {{/each}}
    </div>
</div>